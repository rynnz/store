<% layout('layout') -%>

    <div class="row">
        <div class="col-sm-12">
            <div class="card bg-dark">
                <div class="card-body">
                    <input class="form-control form-control-sm" type="text" id="passwords-search" placeholder="Search">
                    <div class="table-responsive-xl" id="pass-table">
                        <table class="table table-borderless" style="display:none">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">URL</th>
                                    <th scope="col">Login</th>
                                    <th scope="col">Password</th>
                                </tr>
                            </thead>
                            <tbody id="passwords-data"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="application/javascript" src="/js/passwords.js"></script>